<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.iscrizione.IscrizioneGareArbitroController"
            style="-fx-background-color: #e6f7ff;"
            prefWidth="900"
            prefHeight="650">

    <!-- TOP -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 15;">
            <Label text="Iscrizione Arbitro alle Gare"
                   style="-fx-font-size: 22; -fx-font-weight: bold; -fx-text-fill: #005f5f;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Indietro" onAction="#handleBack"/>
        </HBox>
    </top>

    <!-- CENTER -->
    <center>
        <ScrollPane fitToWidth="true">
            <VBox spacing="20" style="-fx-padding: 20;">

                <!-- Selezione gara -->
                <VBox spacing="10">
                    <Label text="Seleziona una gara disponibile:"
                           style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #005f5f;"/>
                    <ComboBox fx:id="garaComboBox"
                              promptText="Seleziona una gara..."
                              prefWidth="500"
                              editable="true"
                              onAction="#onGaraSelected"/>
                </VBox>

                <Separator/>

                <!-- Dettagli gara -->
                <VBox fx:id="dettagliGaraSection"
                      spacing="10"
                      visible="false"
                      managed="false"
                      style="-fx-background-color: white;
                             -fx-padding: 15;
                             -fx-border-color: #005f5f;
                             -fx-border-width: 2;
                             -fx-border-radius: 5;">

                    <Label text="Dettagli della Gara"
                           style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #005f5f;"/>

                    <GridPane hgap="20" vgap="8">
                        <columnConstraints>
                            <ColumnConstraints percentWidth="25"/>
                            <ColumnConstraints percentWidth="25"/>
                            <ColumnConstraints percentWidth="25"/>
                            <ColumnConstraints percentWidth="25"/>
                        </columnConstraints>

                        <Label text="Codice:" style="-fx-font-weight: bold;"
                               GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <Label fx:id="lblCodiceGara"
                               GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                        <Label text="Data:" style="-fx-font-weight: bold;"
                               GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                        <Label fx:id="lblData"
                               GridPane.rowIndex="0" GridPane.columnIndex="3"/>

                        <Label text="Tecnica:" style="-fx-font-weight: bold;"
                               GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <Label fx:id="lblTecnica"
                               GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                        <Label text="Tipo Gara:" style="-fx-font-weight: bold;"
                               GridPane.rowIndex="1" GridPane.columnIndex="2"/>
                        <Label fx:id="lblTipoGara"
                               GridPane.rowIndex="1" GridPane.columnIndex="3"/>

                        <Label text="Campo:" style="-fx-font-weight: bold;"
                               GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <Label fx:id="lblCampoGara"
                               GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                        <Label text="Stato:" style="-fx-font-weight: bold;"
                               GridPane.rowIndex="2" GridPane.columnIndex="2"/>
                        <Label fx:id="lblStatoGara"
                               GridPane.rowIndex="2" GridPane.columnIndex="3"/>
                    </GridPane>
                </VBox>

            </VBox>
        </ScrollPane>
    </center>

    <!-- BOTTOM -->
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="15" style="-fx-padding: 20;">
            <Button text="Annulla" onAction="#handleBack" prefWidth="120"/>
            <Button fx:id="btnConferma"
                    text="Conferma Iscrizione"
                    prefWidth="180"
                    onAction="#handleConferma"
                    style="-fx-background-color: #005f5f;
                           -fx-text-fill: white;
                           -fx-font-weight: bold;"/>
        </HBox>
    </bottom>

</BorderPane>