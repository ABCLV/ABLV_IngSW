<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.iscrizione.AnnullaIscrizioneArbitroController"
            style="-fx-background-color: #fff4e6;"
            prefWidth="900"
            prefHeight="650">

    <!-- TOP -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 15;">
            <Label text="Le mie gare"
                   style="-fx-font-size: 22; -fx-font-weight: bold; -fx-text-fill: #7a3e00;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Indietro" onAction="#handleBack"/>
        </HBox>
    </top>

    <!-- CENTER -->
    <center>
        <HBox spacing="20" style="-fx-padding: 20;">

            <!-- Lista gare -->
            <VBox spacing="10" prefWidth="300">
                <Label text="Gare assegnate"
                       style="-fx-font-size: 16; -fx-font-weight: bold;"/>
                <ListView fx:id="listaGare"/>
            </VBox>

            <!-- Dettagli -->
            <VBox fx:id="dettagliGaraSection"
                  spacing="10"
                  visible="false"
                  managed="false"
                  style="-fx-background-color: white;
                         -fx-padding: 15;
                         -fx-border-color: #7a3e00;
                         -fx-border-width: 2;
                         -fx-border-radius: 5;"
                  HBox.hgrow="ALWAYS">

                <Label text="Dettagli Gara"
                       style="-fx-font-size: 18; -fx-font-weight: bold;"/>

                <GridPane hgap="20" vgap="8">
                    <Label text="Codice:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <Label fx:id="lblCodiceGara" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="Data:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <Label fx:id="lblData" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <Label text="Tecnica:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <Label fx:id="lblTecnica" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                    <Label text="Tipo Gara:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                    <Label fx:id="lblTipoGara" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                    <Label text="Campo:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                    <Label fx:id="lblCampoGara" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                    <Label text="Stato:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                    <Label fx:id="lblStatoGara" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
                </GridPane>
            </VBox>
        </HBox>
    </center>

    <!-- BOTTOM -->
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="15" style="-fx-padding: 20;">
            <Button fx:id="btnDisiscrivi"
                    text="Disiscriviti dalla gara"
                    disable="true"
                    onAction="#handleDisiscrivi"
                    style="-fx-background-color: #7a3e00;
                           -fx-text-fill: white;
                           -fx-font-weight: bold;"
                    prefWidth="220"/>
        </HBox>
    </bottom>

</BorderPane>
