<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.home.SocietaHomeController"
            style="-fx-background-color: #e6f7ff;">

    <!-- ========== TOP ========== -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 10;">
            <Label fx:id="welcomeLabel"
                   style="-fx-font-size: 22; -fx-font-weight: bold; -fx-text-fill: #005f5f;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Torna alla Home" onAction="#handleBack"/>
        </HBox>
    </top>

    <!-- ========== LEFT ========== -->
    <left>
        <VBox spacing="15" style="-fx-padding: 15;">
            <Button text="Registra Concorrente" onAction="#apriRegistraConcorrente" maxWidth="Infinity"/>
            <Button text="Proponi Gara" onAction="#apriProponiGara" maxWidth="Infinity"/>
            <Button text="Iscriviti ad una gara" onAction="#apriIscrizioneGara" maxWidth="Infinity"/>
			<Button text="Modifica dati personali" onAction="#apriModificaDati" maxWidth="Infinity"/>
        </VBox>
    </left>

    <!-- ========== CENTER ========== -->
    <center>
        <VBox spacing="15" style="-fx-padding: 15;">
            <!-- Concorrenti -->
            <VBox spacing="10" VBox.vgrow="ALWAYS">
                <Label text="Concorrenti iscritti alla tua società"
                       style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #005f5f;"/>
                <TableView fx:id="pescatoriTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colCF" text="CF" prefWidth="120"/>
                        <TableColumn fx:id="colNome" text="Nome" prefWidth="100"/>
                        <TableColumn fx:id="colCognome" text="Cognome" prefWidth="100"/>
                        <TableColumn fx:id="colEmail" text="Email" prefWidth="150"/>
                        <TableColumn fx:id="colNascita" text="Nascita" prefWidth="100"/>
                    </columns>
                </TableView>
            </VBox>

            <Separator/>

            <!-- Gare proposte -->
            <VBox spacing="10" VBox.vgrow="ALWAYS">
                <Label text="Le mie proposte di gara"
                       style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #005f5f;"/>
                <TableView fx:id="gareProposteTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colCodiceProposte" text="Codice" prefWidth="80"/>
                        <TableColumn fx:id="colNumProvaProposte" text="N. Prova" prefWidth="80"/>
                        <TableColumn fx:id="colTecnicaProposte" text="Tecnica" prefWidth="100"/>
                        <TableColumn fx:id="colDataProposte" text="Data" prefWidth="100"/>
                        <TableColumn fx:id="colCampionatoProposte" text="Campionato" prefWidth="150"/>
                        <TableColumn fx:id="colStatoConfermaProposte" text="Stato Conferma" prefWidth="120"/>
                        <TableColumn fx:id="colCampoGaraProposte" text="Campo Gara" prefWidth="150"/>
                    </columns>
                </TableView>
            </VBox>
        </VBox>
    </center>

    <!-- ========== RIGHT ========== -->
    <right>
        <VBox spacing="10" style="-fx-padding: 15;" prefWidth="220">
            <Label text="Dati società"
                   style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #005f5f;"/>
            <Label fx:id="lblSocNome"/>
            <Label fx:id="lblSocIndirizzo"/>
            <Label fx:id="lblSocCitta"/>
            <Label fx:id="lblSocCap"/>
            <Label fx:id="lblSocEmail"/>
        </VBox>
    </right>
</BorderPane>