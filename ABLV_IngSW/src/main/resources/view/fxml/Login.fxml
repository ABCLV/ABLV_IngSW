<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.reglog.LoginController"
      alignment="CENTER"
      spacing="10"
      prefWidth="400"
      prefHeight="320"
      style="-fx-background-color: #e6f7ff;">

    <Label text="Login" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #005f5f;"/>

    <!-- Tendina tipo utente -->
    <Label text="Tipologia utente:"/>
    <ComboBox fx:id="tipoCombo" maxWidth="250" onAction="#mostraCampi"/>

    <!-- Campo identificativo (visibile solo dopo scelta) -->
    <Label fx:id="idLabel" text="" visible="false"/>
    <TextField fx:id="idField" maxWidth="250" visible="false"/>

    <!-- Password -->
    <Label text="Password:"/>
    <PasswordField fx:id="passField" maxWidth="250"/>

    <!-- Messaggio errore -->
    <Label fx:id="errLabel" text="Password errata per questo tipo utente"
           textFill="RED" visible="false"/>

    <!-- Pulsanti -->
    <HBox spacing="10" alignment="CENTER">
        <Button text="Accedi" fx:id="loginBtn" onAction="#handleLogin"/>
        <Button text="Accedi come utente esterno" fx:id="guestBtn" onAction="#handleGuest"/>
        <Button text="Torna alla Home" fx:id="backBtn" onAction="#handleBack"/>
    </HBox>
</VBox>