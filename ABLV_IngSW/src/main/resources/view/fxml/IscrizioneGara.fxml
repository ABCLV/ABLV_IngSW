<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.iscrizione.IscrizioneGaraController"
            style="-fx-background-color: #e6f7ff;"
            prefWidth="900"
            prefHeight="700">

    <!-- TOP -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 15;">
            <Label text="Iscrizione ad una Gara"
                   style="-fx-font-size: 22; -fx-font-weight: bold; -fx-text-fill: #005f5f;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Indietro" onAction="#handleBack"/>
        </HBox>
    </top>

    <!-- CENTER con ScrollPane -->
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: #e6f7ff;">
            <VBox spacing="20" style="-fx-padding: 20;">
                
                <!-- Sezione selezione concorrente (visibile solo per le società) -->
                <VBox fx:id="concorrenteSection" spacing="10" managed="false" visible="false">
                    <Label text="Seleziona il concorrente da iscrivere:"
                           style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #005f5f;"/>
                    <ComboBox fx:id="concorrenteComboBox"
                              promptText="Seleziona un concorrente..."
                              prefWidth="500"
                              editable="true"/>
                </VBox>

                <Separator/>

                <!-- Sezione selezione gara -->
                <VBox spacing="10">
                    <Label text="Seleziona la gara:"
                           style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #005f5f;"/>
                    <ComboBox fx:id="garaComboBox"
                              promptText="Seleziona una gara..."
                              prefWidth="500"
                              editable="true"
                              onAction="#onGaraSelected"/>
                </VBox>

                <Separator/>

                <!-- Dettagli della gara selezionata - LAYOUT A 2 COLONNE -->
                <VBox fx:id="dettagliGaraSection" spacing="10" managed="false" visible="false"
                      style="-fx-background-color: white; -fx-padding: 15; -fx-border-color: #005f5f; -fx-border-width: 2; -fx-border-radius: 5;">
                    
                    <Label text="Dettagli della Gara"
                           style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #005f5f;"/>
                    
                    <GridPane hgap="20" vgap="8">
                        <columnConstraints>
                            <ColumnConstraints percentWidth="25"/>
                            <ColumnConstraints percentWidth="25"/>
                            <ColumnConstraints percentWidth="25"/>
                            <ColumnConstraints percentWidth="25"/>
                        </columnConstraints>

                        <!-- Prima riga -->
                        <Label text="Codice:" style="-fx-font-weight: bold;" 
                               GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <Label fx:id="lblCodiceGara" 
                               GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                        
                        <Label text="Data:" style="-fx-font-weight: bold;" 
                               GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                        <Label fx:id="lblData" 
                               GridPane.columnIndex="3" GridPane.rowIndex="0"/>

                        <!-- Seconda riga -->
                        <Label text="Tecnica:" style="-fx-font-weight: bold;" 
                               GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                        <Label fx:id="lblTecnica" 
                               GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                        
                        <Label text="Tipo Gara:" style="-fx-font-weight: bold;" 
                               GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                        <Label fx:id="lblTipoGara" 
                               GridPane.columnIndex="3" GridPane.rowIndex="1"/>

                        <!-- Terza riga -->
                        <Label text="Campo:" style="-fx-font-weight: bold;" 
                               GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                        <Label fx:id="lblCampoGara" 
                               GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                        
                        <Label text="Criterio Punti:" style="-fx-font-weight: bold;" 
                               GridPane.columnIndex="2" GridPane.rowIndex="2"/>
                        <Label fx:id="lblCriterioPunti" 
                               GridPane.columnIndex="3" GridPane.rowIndex="2"/>

                        <!-- Quarta riga -->
                        <Label text="Stato:" style="-fx-font-weight: bold;" 
                               GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                        <Label fx:id="lblStatoGara" 
                               GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                        
                        <Label text="Campionato:" style="-fx-font-weight: bold;" 
                               GridPane.columnIndex="2" GridPane.rowIndex="3"/>
                        <Label fx:id="lblCampionato" 
                               GridPane.columnIndex="3" GridPane.rowIndex="3"/>

                        <!-- Quinta riga -->
                        <Label text="N° Prova:" style="-fx-font-weight: bold;" 
                               GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                        <Label fx:id="lblNumProva" 
                               GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                    </GridPane>
                </VBox>

            </VBox>
        </ScrollPane>
    </center>

    <!-- BOTTOM -->
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="15" style="-fx-padding: 20;">
            <Button text="Annulla" onAction="#handleBack" prefWidth="120"/>
            <Button fx:id="btnConferma" 
                    text="Conferma Iscrizione" 
                    onAction="#handleConferma"
                    disable="true"
                    prefWidth="150"
                    style="-fx-background-color: #005f5f; -fx-text-fill: white; -fx-font-weight: bold;"/>
        </HBox>
    </bottom>

</BorderPane>