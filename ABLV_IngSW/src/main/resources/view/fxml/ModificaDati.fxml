<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.update.ModificaDatiController"
      spacing="15"
      prefWidth="900"
      prefHeight="700"
      style="-fx-background-color: #e6f7ff;">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Label di benvenuto dinamico -->
    <Label fx:id="titleLabel"
           text="Modifica Dati"
           style="-fx-font-size: 22; -fx-font-weight: bold; -fx-text-fill: #005f5f;"/>

    <!-- Separatore -->
    <Separator/>

    <!-- Contenitore principale per i campi -->
    <VBox spacing="20" VBox.vgrow="ALWAYS">
        
        <!-- Sezione campi Concorrente -->
        <VBox fx:id="concorrenteSection" spacing="15" managed="false" visible="false">
            <Label text="Dati Concorrente"
                   style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #005f5f;"/>
            
            <GridPane hgap="10" vgap="15">
                <columnConstraints>
                    <ColumnConstraints minWidth="150" prefWidth="150"/>
                    <ColumnConstraints minWidth="300" prefWidth="400"/>
                </columnConstraints>
                
                <!-- Nome -->
                <Label text="CF:" GridPane.columnIndex="0" GridPane.rowIndex="0"
                       style="-fx-font-size: 14; -fx-text-fill: #005f5f;"/>
                <TextField fx:id="cfField" GridPane.columnIndex="1" GridPane.rowIndex="0"
                          promptText="Inserisci il CF"/>
                
                <!-- Nome -->
                <Label text="Nome:" GridPane.columnIndex="0" GridPane.rowIndex="1"
                       style="-fx-font-size: 14; -fx-text-fill: #005f5f;"/>
                <TextField fx:id="nomeField" GridPane.columnIndex="1" GridPane.rowIndex="1"
                          promptText="Inserisci il nome"/>
                
                <!-- Cognome -->
                <Label text="Cognome:" GridPane.columnIndex="0" GridPane.rowIndex="2"
                       style="-fx-font-size: 14; -fx-text-fill: #005f5f;"/>
                <TextField fx:id="cognomeField" GridPane.columnIndex="1" GridPane.rowIndex="2"
                          promptText="Inserisci il cognome"/>
                
                <!-- Email -->
                <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="3"
                       style="-fx-font-size: 14; -fx-text-fill: #005f5f;"/>
                <TextField fx:id="emailConcorrenteField" GridPane.columnIndex="1" GridPane.rowIndex="3"
                          promptText="Inserisci l'email"/>
                
                <!-- Data di Nascita -->
                <Label text="Data di Nascita:" GridPane.columnIndex="0" GridPane.rowIndex="4"
                       style="-fx-font-size: 14; -fx-text-fill: #005f5f;"/>
                <DatePicker fx:id="nascitaDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="5"
                           promptText="Seleziona la data di nascita"/>
            </GridPane>
        </VBox>

        <!-- Sezione campi Società -->
        <VBox fx:id="societaSection" spacing="15" managed="false" visible="false">
            <Label text="Dati Società"
                   style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #005f5f;"/>
            
            <GridPane hgap="10" vgap="15">
                <columnConstraints>
                    <ColumnConstraints minWidth="150" prefWidth="150"/>
                    <ColumnConstraints minWidth="300" prefWidth="400"/>
                </columnConstraints>
                
                <!-- Nome -->
                <Label text="Nome" GridPane.columnIndex="0" GridPane.rowIndex="0"
                       style="-fx-font-size: 14; -fx-text-fill: #005f5f;"/>
                <TextField fx:id="nomeSocietaField" GridPane.columnIndex="1" GridPane.rowIndex="0"
                          promptText="Inserisci il nome"/>
                
                <!-- Email -->
                <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="1"
                       style="-fx-font-size: 14; -fx-text-fill: #005f5f;"/>
                <TextField fx:id="emailSocietaField" GridPane.columnIndex="1" GridPane.rowIndex="1"
                          promptText="Inserisci l'email"/>
                
                <!-- CAP -->
                <Label text="CAP:" GridPane.columnIndex="0" GridPane.rowIndex="2"
                       style="-fx-font-size: 14; -fx-text-fill: #005f5f;"/>
                <TextField fx:id="capField" GridPane.columnIndex="1" GridPane.rowIndex="2"
                          promptText="Inserisci il CAP"/>
                
                <!-- Città -->
                <Label text="Città:" GridPane.columnIndex="0" GridPane.rowIndex="3"
                       style="-fx-font-size: 14; -fx-text-fill: #005f5f;"/>
                <TextField fx:id="cittaField" GridPane.columnIndex="1" GridPane.rowIndex="3"
                          promptText="Inserisci la città"/>
                
                <!-- Indirizzo -->
                <Label text="Indirizzo:" GridPane.columnIndex="0" GridPane.rowIndex="4"
                       style="-fx-font-size: 14; -fx-text-fill: #005f5f;"/>
                <TextField fx:id="indirizzoField" GridPane.columnIndex="1" GridPane.rowIndex="4"
                          promptText="Inserisci l'indirizzo"/>
            </GridPane>
        </VBox>

        <!-- Messaggio di feedback -->
        <Label fx:id="messageLabel"
               style="-fx-font-size: 14; -fx-text-fill: #d32f2f;"
               wrapText="true"/>

    </VBox>

    <!-- Separatore -->
    <Separator/>

    <!-- Pulsanti azioni -->
    <HBox spacing="10" alignment="CENTER">
        <Button text="Salva Modifiche" onAction="#salvaModifiche" prefWidth="150"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
        <Button text="Annulla" onAction="#annulla" prefWidth="150"
                style="-fx-background-color: #9e9e9e; -fx-text-fill: white;"/>
    </HBox>

</VBox>
