<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="client.RicercaCampoGaraController"
      alignment="CENTER"
      spacing="10"
      prefWidth="700"
      prefHeight="500"
      style="-fx-background-color: #e6f7ff;">

    <Label text="Ricerca Campo Gara"
           style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #005f5f;" />

    <!-- Selezione campo gara -->
    <ComboBox fx:id="campoCombo" promptText="Seleziona Campo Gara" prefWidth="300"/>

    <!-- Tabella Settori -->
    <Label text="Settori:" style="-fx-font-weight: bold;"/>
    <TableView fx:id="settoriTable" prefWidth="650" prefHeight="150">
        <columns>
            <TableColumn fx:id="idSettoreCol" text="ID Settore" prefWidth="150"/>
            <TableColumn fx:id="nomeSettoreCol" text="Nome Settore" prefWidth="500"/>
        </columns>
    </TableView>

    <!-- Tabella Gare -->
    <Label text="Gare del Campo:" style="-fx-font-weight: bold;"/>
    <TableView fx:id="gareTable" prefWidth="650" prefHeight="150">
        <columns>
            <TableColumn fx:id="idGaraCol" text="ID Gara" prefWidth="150"/>
            <TableColumn fx:id="nomeGaraCol" text="Nome Gara" prefWidth="500"/>
        </columns>
    </TableView>

    <Button text="Indietro" fx:id="backBtn" onAction="#handleBack"/>
</VBox>
