<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="client.RicercaGareController"
      alignment="CENTER"
      spacing="15"
      prefWidth="700"
      prefHeight="500"
      style="-fx-background-color: #e6f7ff; -fx-padding: 20;">

    <Label text="Ricerca Gare" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #005f5f;"/>

    <!-- Tabella Gare -->
    <TableView fx:id="table" prefHeight="400" prefWidth="650">
        <columns>
            <TableColumn fx:id="codiceCol" text="Codice" prefWidth="100"/>
            <TableColumn fx:id="numProvaCol" text="N. Prova" prefWidth="80"/>
            <TableColumn fx:id="dataCol" text="Data" prefWidth="120"/>
            <TableColumn fx:id="tipoGaraCol" text="Tipo Gara" prefWidth="120"/>
            <TableColumn fx:id="tecnicaCol" text="Tecnica" prefWidth="110"/>
            <TableColumn fx:id="puntiCol" text="Criterio Punti" prefWidth="120"/>
        </columns>
    </TableView>

    <!-- Pulsante Indietro -->
    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="backBtn" text="Torna indietro" onAction="#handleBack"
                style="-fx-background-color: #005f5f; -fx-text-fill: white; -fx-font-weight: bold;"/>
    </HBox>

</VBox>