<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="client.registazioniELogin.RegistrazioneController"
      alignment="CENTER"
      spacing="15"
      prefWidth="500"
      prefHeight="600"
      style="-fx-background-color: #e6f7ff;">

    <Label text="Registrazione" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #005f5f;"/>

    <!-- Selezione tipo utente -->
    <Label text="Tipo utente:"/>
    <ComboBox fx:id="tipoCombo" prefWidth="250"/>

    <!-- Contenitore dinamico: qui vengono aggiunti i campi -->
    <GridPane fx:id="campiGrid" alignment="CENTER" hgap="10" vgap="10" maxWidth="350"/>

    <!-- Label errore / successo -->
    <Label fx:id="errLabel" text="" textFill="RED" visible="false" wrapText="true" maxWidth="300"
           style="-fx-font-weight: bold; -fx-padding: 5;"/>

    <!-- Pulsanti -->
    <HBox spacing="10" alignment="CENTER">
        <Button text="Registrati" fx:id="regBtn" onAction="#handleRegistra"/>
        <Button text="Torna alla Home" fx:id="backBtn" onAction="#handleBack"/>
    </HBox>
</VBox>